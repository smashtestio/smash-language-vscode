{
    "name": "smash-language-vscode",
    "displayName": "Smashtest language support",
    "description": "Syntax highlighting for Smashtest",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
	"activationEvents": [
		"onLanguage:smash"
	],
	"main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "smash",
                "aliases": [
                    "Smashtest",
                    "smash"
                ],
                "extensions": [
                    ".smash"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "smash",
                "scopeName": "source.smash",
                "path": "./syntaxes/smash.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Smashtest language support",
            "properties": {
                "smash.intellisenseCase": {
                    "type": "string",
                    "default": "Automatic",
                    "description": "Capitalisation of steps generated via Intellisense",
                    "enum": [
                        "Automatic",
                        "Capitalize first",
                        "all lower case"
                    ]
                }
            }
        }
    },
    "repository": {
        "url": "https://github.com/smashtestio/smash-language-vscode"
    },
    "publisher": "toofifty",
	"scripts": {
		"vscode:prepublish": "yarn compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
    "devDependencies": {
        "@types/node": "^12.6.9",
        "@types/vscode": "^1.36.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    }
}
